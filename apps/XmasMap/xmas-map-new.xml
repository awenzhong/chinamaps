      $("item_all_" + window.idx).className = "over";
      window.all = false;
    } else if (lastTab != 0) {
      $("item_" + item['type'] + "_" + i).className = "over";
    }
    marker.setImage(url);
    map.getBoundsAsync(function(bounds) {
      if (bounds.contains(marker.point) == false) {
        map.panTo(marker.point);
      }
    });
