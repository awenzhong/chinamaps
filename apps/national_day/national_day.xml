   * @param {Number} year Which year
   * @param {Number} month Which month
   * @return {Number} date
   */
  Calendar.prototype.getLastDateOfMonth = function(year, month) {
    var yer = year;
    var mon = month + 1;
    if (mon > 11) {
      mon = 0;
      yer ++;
    }
    var day = new Date(yer, mon, 1);
    var mSPerday = 24 * 3600 * 1000;
    day.setTime(day.getTime() - mSPerday);
    return day.getDate();
  };

